{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist/server",
    "target": "ES2020",
    "isolatedModules": false,
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/client.tsx", "src/components/**/*"]
}